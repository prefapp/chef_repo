server {
    listen   <%=@port%>;
    server_name  <%= @name %> <%= @alternate_names.join(' ') %>;

    access_log  <%= node['nginx']['log_dir'] %>/<%= @name %>.access.log;
    error_log <%= node["nginx"]["log_dir"]%>/<%=@name%>.error_log info;

    root   <%= @document_root %>;
    passenger_app_env <%= @passenger_app_env %>;
    passenger_enabled on;
}
