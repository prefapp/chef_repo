#!/bin/bash

# execute extra_tasks
FILES=<%=node['riyic']['extra_tasks_dir']%>/*

for f in $FILES
do 
    bash $f
done


# remove limitations to start services
find -L /etc/service -maxdepth 2 -mindepth 2 -type f -name down -exec rm -f '{}' +

# start runit
exec /usr/bin/runsvdir -P /etc/service 'log: #{ '.' * 395}'        

